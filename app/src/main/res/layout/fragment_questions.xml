<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".helper.QuestionsFragment"
    android:padding="20dp">

    <TextView
        android:id="@+id/tv_qustion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="This is a Question. What is java Programing language?"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:padding="20dp"/>
    <RadioGroup
        android:id="@+id/radio_grp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/radio_btn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Option 1"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:padding="10dp"/>
        <RadioButton
            android:id="@+id/radio_btn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Option 2"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:padding="10dp"/>
        <RadioButton
            android:id="@+id/radio_btn3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Option 3"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:padding="10dp"/>
        <RadioButton
            android:id="@+id/radio_btn4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Option 4"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:padding="10dp"/>
    </RadioGroup>

</LinearLayout>